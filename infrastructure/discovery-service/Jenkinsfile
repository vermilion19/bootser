pipeline {
    agent any

    environment {
        SERVICE_NAME = 'discovery-service'
        SERVICE_PATH = 'infrastructure/discovery-service'
        DOCKER_IMAGE = 'booster/discovery-service'
        GRADLE_OPTS = '-Dorg.gradle.daemon=false'

        // TODO: 오라클 클라우드 인스턴스 정보로 변경
        DEPLOY_HOST = 'xxx.xxx.xxx.xxx'
        DEPLOY_USER = 'ubuntu'
        DEPLOY_PORT = '8761'
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Check Changes') {
            steps {
                script {
                    def changes = sh(
                        script: "git diff --name-only ${GIT_PREVIOUS_SUCCESSFUL_COMMIT ?: 'HEAD~1'} ${GIT_COMMIT}",
                        returnStdout: true
                    ).trim()

                    def shouldBuild = changes.contains('infrastructure/discovery-service')

                    if (!shouldBuild) {
                        currentBuild.result = 'NOT_BUILT'
                        echo "No changes in ${SERVICE_NAME}. Skipping build."
                        currentBuild.getRawBuild().getExecutor().interrupt(Result.NOT_BUILT)
                    }

                    echo "Changed files:\n${changes}"
                }
            }
        }

        stage('Build') {
            steps {
                sh './gradlew :infrastructure:discovery-service:clean :infrastructure:discovery-service:build -x test'
            }
        }

        stage('Test') {
            steps {
                sh './gradlew :infrastructure:discovery-service:test'
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: '**/build/test-results/test/*.xml'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${SERVICE_PATH}") {
                    sh """
                        docker build \
                            -t ${DOCKER_IMAGE}:${BUILD_NUMBER} \
                            -t ${DOCKER_IMAGE}:latest \
                            .
                    """
                }
            }
        }

        stage('Push to Registry') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-registry',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}
                        docker push ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                sshagent(['oracle-cloud-ssh-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${DEPLOY_USER}@${DEPLOY_HOST} '
                            docker pull ${DOCKER_IMAGE}:${BUILD_NUMBER}
                            docker stop ${SERVICE_NAME} || true
                            docker rm ${SERVICE_NAME} || true
                            docker run -d \\
                                --name ${SERVICE_NAME} \\
                                --restart unless-stopped \\
                                -p ${DEPLOY_PORT}:8761 \\
                                ${DOCKER_IMAGE}:${BUILD_NUMBER}
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "${SERVICE_NAME} 빌드 및 배포 성공: #${BUILD_NUMBER}"
        }
        failure {
            echo "${SERVICE_NAME} 빌드 실패: #${BUILD_NUMBER}"
        }
        cleanup {
            cleanWs()
        }
    }
}
